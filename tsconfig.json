{
  "compilerOptions": {
    "baseUrl": "./packages/",
    "paths": {
      "client/*": ["client/*"],
      "server/*": ["server/*"]
    },
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2017",
    "lib": [
      "dom",
      "esnext"
    ],
    "types": [
      "node",
      "jest"
    ],
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "jsx": "react",
    "allowJs": true,
    "skipLibCheck": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strict": true,
    "noImplicitAny": false
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ]
}
